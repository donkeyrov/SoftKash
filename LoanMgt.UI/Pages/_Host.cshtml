@page "/"
@namespace LoanMgt.UI.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SoftKash Loan Management System</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/main.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="css/style.css" rel="stylesheet" />
    
    <link href="_content/Syncfusion.Blazor/styles/bootstrap4.css" rel="stylesheet" />    
    <link href="_content/Blazor.ContextMenu/blazorContextMenu.min.css" rel="stylesheet" />
    <link href="_content/Blazored.Toast/blazored-toast.min.css" rel="stylesheet" />
    
    <link href="https://cdn.boldreports.com/4.1.78/content/material/bold.reports.all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    
    <link href="https://cdn.boldreports.com/4.1.78/content/material/bold.reportdesigner.min.css" rel="stylesheet" />
    <script src="https://cdn.boldreports.com/external/jquery-1.10.2.min.js" type="text/javascript"></script>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="js/JSInterop.js"></script>
    <script src="https://cdn.syncfusion.com/blazor/19.3.43/syncfusion-blazor.min.js"></script>
    <script src="_framework/blazor.server.js"></script>
    <script src="_content/Blazor.ContextMenu/blazorContextMenu.min.js"></script>
    <script>
        window.changeHeight = (h) => {
            //document.body.h
            //$("#page-content-wrapper").width(screen.availWidth - width);
            //$("#page-content-wrapper").css("margin-left", width);
            $(".main").css("height", screen.height);
        };
    </script>

<!--Used to render the gauge item. Add this script only if your report contains the gauge report item. -->
<script src="https://cdn.boldreports.com/4.1.78/scripts/common/ej2-base.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/common/ej2-data.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/common/ej2-pdf-export.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/common/ej2-svg-base.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/data-visualization/ej2-lineargauge.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/data-visualization/ej2-circulargauge.min.js"></script>

<!--Used to render the map item. Add this script only if your report contains the map report item.-->
<script src="https://cdn.boldreports.com/4.1.78/scripts/data-visualization/ej2-maps.min.js"></script>

<!-- Report Viewer component script-->
<script src="https://cdn.boldreports.com/4.1.78/scripts/common/bold.reports.common.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/common/bold.reports.widgets.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/common/bold.report-designer-widgets.min.js"></script>


<!--Used to render the chart item. Add this script only if your report contains the chart report item.-->
<script src="https://cdn.boldreports.com/4.1.78/scripts/data-visualization/ej.chart.min.js"></script>
<script src="https://cdn.boldreports.com/4.1.78/scripts/bold.report-viewer.min.js"></script>

<!-- Report Designer component script-->
<script src="https://cdn.boldreports.com/4.1.78/scripts/bold.report-designer.min.js"></script>

<script src="js/boldreports-interop.js"></script>

</body>
</html>
