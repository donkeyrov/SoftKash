            catch(Exception ex)
            {              
            }
            //------------------------------------------------------------------------
        }
        else
        {
            Service.Update(loan);
        }

        toastService.ShowSuccess("Loan has been created", "System Information");
        UriHelper.NavigateTo("/viewallloans",true);
    }

